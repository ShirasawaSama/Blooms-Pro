{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "standard-jsx",
        "standard-react",
        "plugin:promise/recommended",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "promise"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
